{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "POST /queues/:endpoint body",
  "type": "object",
  "properties": {
    "body": {},
    "runAt": {
      "type": "string",
      "format": "date-time",
      "description": "@deprecated. Use `delay` instead."
    },
    "delay": { "type": "number", "minimum": 0 },
    "id": {
      "type": "string"
    },
    "repeat": {
      "type": "object",
      "properties": {
        "every": {
          "type": "number",
          "minimum": 0
        },
        "limit": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["every", "limit"],
      "additionalProperties": false
    }
  },
  "required": ["endpoint"],
  "additionalProperties": false
}
