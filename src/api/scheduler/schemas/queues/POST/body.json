{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EnqueueJob",
  "type": "object",
  "properties": {
    "body": {
      "type": "string",
      "description": "The job's payload."
    },
    "runAt": {
      "type": "string",
      "format": "date-time",
      "description": "@deprecated. Use `delay` instead."
    },
    "delay": {
      "type": "number",
      "minimum": 0,
      "description": "delay in milliseconds"
    },
    "id": {
      "type": "string",
      "description": "allows to specify the ID upfront"
    },
    "retry": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      },
      "minItems": 1,
      "maxItems": 10
    },
    "override": { "type": "boolean" },
    "exclusive": { "type": "boolean" },
    "repeat": {
      "type": "object",
      "properties": {
        "every": {
          "type": "number",
          "minimum": 0
        },
        "times": {
          "type": "number",
          "minimum": 1
        },
        "cron": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [],
  "additionalProperties": false
}
